<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_green"
    tools:context=".LoginUserPage">

    <ImageButton
        android:id="@+id/backButtonImage"
        android:layout_width="164dp"
        android:layout_height="92dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/loginBackground"
            android:layout_width="414dp"
            android:layout_height="650dp"
            android:layout_marginTop="163dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                app:srcCompat="@drawable/login_background" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/loginLogo"
                    android:layout_width="157dp"
                    android:layout_height="87dp"
                    android:layout_marginStart="152dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="151dp"
                    android:gravity="center"
                    android:text="Login"
                    android:textSize="50dp"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/newToiWipeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="116dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="116dp"
                    android:layout_marginBottom="56dp"
                    android:clickable="true"
                    android:text="New to iWipe? Register Here!"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/nameTag"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/loginLogo" />

                <TextView
                    android:id="@+id/nameTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="81dp"
                    android:layout_marginBottom="13dp"
                    android:text="E M A I L"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/passwordTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="81dp"
                    android:layout_marginTop="28dp"
                    android:text="P A S S W O R D"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="253dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="81dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="80dp"
                    android:background="@drawable/textbox_colour"
                    android:ems="10"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nameTag" />

                <EditText
                    android:id="@+id/editTextTextPassword"
                    android:layout_width="253dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="81dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/textbox_colour"
                    android:ems="10"
                    android:inputType="textPassword"
                    app:layout_constraintBottom_toTopOf="@+id/loginButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/passwordTag" />

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="256dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="78dp"
                    android:background="@color/pink_buttons"
                    android:backgroundTint="@color/pink_buttons"
                    android:text="Login"
                    android:theme="@style/Button.Pink"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

                <TextView
                    android:id="@+id/loginRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="148dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="147dp"
                    android:text="Sign in to continue."
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/loginButton" />

                <ImageView
                    android:id="@+id/iWipeLogo"
                    android:layout_width="188dp"
                    android:layout_height="83dp"
                    android:layout_marginStart="116dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="110dp"
                    android:layout_marginBottom="51dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/loginRequest"
                    app:srcCompat="@drawable/iwipe_logo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

